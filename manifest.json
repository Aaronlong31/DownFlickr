{
  "manifest_version": 2,
  "name": "DownFlickr - Flickr Downloader",
  "version": "0.5",
  "description": "Flickr photos downloader extension.",

  "background": {
    "scripts": ["background.js"]/*,
    "persistent": false*/
  },

  "browser_action": {
    "default_icon": {
      "19": "icon16.png",
      "38": "icon48.png"
    },
    // "default_title": "Google Mail",
    "default_popup": "popup.html"
  },

  "permissions": [
    "http://*.flickr.com/",
    "tabs"
  ]

}